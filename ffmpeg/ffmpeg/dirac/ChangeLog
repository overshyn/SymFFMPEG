	  libdirac_decoder/dirac_cppparser.h,
	  libdirac_decoder/frame_decompress.h,
	  libdirac_decoder/seq_decompress.h,
	  libdirac_encoder/comp_compress.h,
	  libdirac_encoder/quality_monitor.cpp,
